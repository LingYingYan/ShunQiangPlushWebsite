.about-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
  gap: 1.5rem;
  padding: 2rem;
}

.about-text {
  flex: 1 1 300px;
  font-size: clamp(1rem, 2vw, 1.3rem);
  line-height: 1.6;
  max-width: 600px;
}

.about-text h2 {
  font-size: clamp(1.4rem, 3vw, 2rem);
  margin-bottom: 1rem;
}

.about-image {
  flex: 1 1 300px;
  display: flex;
  justify-content: center;
  align-items: center;
  max-width: 400px;
}

