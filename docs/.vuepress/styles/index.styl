/*transition and animation*/

\.fade-in-up
  opacity 0
  transform translateY(20px)
  transition all 0.6s ease-out

.fade-in-up.visible
  opacity 1
  transform translateY(0)

/* Base font for the whole page */
body, .theme-container
  font-family 'Lato', 'Noto Sans SC', sans-serif
  font-size 16px
  line-height 1.8

/* Header fonts */
h1, h2, h3, h4
  font-family 'Poppins', 'Noto Sans SC', sans-serif
  font-weight 700

/* Optional: nav bar font */
.navbar .site-name, .navbar .nav-links a
